<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_header.ejs') %>
</head>
<body>
    <div class="container">
        <div><a href="/addjob" class="btn btn-info">new jobs</a></div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Description</th>
                            <th>Location</th>
                            <th>pay</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<jobs.length; i++){  %>
                            <tr>
                                <th><%= i+1 %></th>
                                <th> <%= jobs[i].description %> </th>
                                <th> <%= jobs[i].location %> </th>
                                <th> <%= jobs[i].pay %> </th>
                                <th> 
                                    <a href="/updatejob/<%= jobs[i]._id %>" class="btn btn-info btn-sm">Edit</a>
                                    <a href="/deletejob/<%= jobs[i]._id %>" class="btn btn-danger btn-sm">Delete</a>
                                </th>
                            </tr>
                        <%} %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
